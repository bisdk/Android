<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_nav">

    <Button
        android:id="@+id/buttonAddGateway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_gateway"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <Button
                android:id="@+id/buttonGetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_name"/>

        <Button
                android:id="@+id/buttonPing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ping"/>

        <Button
                android:id="@+id/buttonState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/state"/>

        <Button
                android:id="@+id/buttonGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/groups"/>

        <Button
                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>